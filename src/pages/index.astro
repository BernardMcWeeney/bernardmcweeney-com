---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 2);

const featuredProjects = (await getCollection("projects"))
  .filter((p) => p.data.featured)
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 2);

const statusLabels = {
  active: "Live",
  development: "In Development",
  planned: "Planned",
  archived: "Archived",
};

const currently = {
  working: "Parish Core WordPress plugin",
  learning: "Rust (slowly)",
  listening: "The Cure - Disintegration",
  reading: "Staff Engineer by Will Larson",
};
---

<Layout
  title="Home"
  description="Bernard McWeeney - A tech enthusiast from Meath, Ireland. Building things with code, helping people and causes along the way."
>
  <!-- Hero -->
  <section class="hero-section">
    <div class="container">
      <div class="hero-content">
        <div class="hero-badge">
          <span class="badge-dot"></span>
          Available for projects
        </div>
        <h1 class="hero-title">
          <span class="hero-greeting">Howya, I'm</span>
          <span class="hero-name">Bernard</span>
        </h1>
        <p class="hero-subtitle">
          Tech enthusiast from <span class="highlight">Meath, Ireland</span> with a habit of building things.
          I make websites, wrangle IT systems, and use technology to help
          <span class="highlight">people and causes</span> that matter.
        </p>
        <div class="hero-actions">
          <a href="/projects" class="btn btn-primary btn-lg">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path><polyline points="13 2 13 9 20 9"></polyline></svg>
            View My Work
          </a>
          <a href="/about" class="btn btn-lg">
            About Me
          </a>
        </div>
        <div class="hero-scroll-hint">
          <span>Scroll to explore</span>
          <div class="scroll-indicator"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Impact at a Glance -->
  <section class="impact-section">
    <div class="container">
      <div class="section-header">
        <span class="section-title">Impact</span>
        <h2 class="section-heading">What I Actually Do</h2>
      </div>

      <!-- Stats Banner -->
      <div class="impact-stats-banner">
        <div class="impact-stat">
          <span class="impact-stat-value">70k+</span>
          <span class="impact-stat-label">Users Supported</span>
        </div>
        <div class="impact-stat">
          <span class="impact-stat-value">100+</span>
          <span class="impact-stat-label">Sites Managed</span>
        </div>
        <div class="impact-stat">
          <span class="impact-stat-value">50+</span>
          <span class="impact-stat-label">Websites Built</span>
        </div>
        <div class="impact-stat">
          <span class="impact-stat-value">7+</span>
          <span class="impact-stat-label">Years Experience</span>
        </div>
      </div>

      <!-- Impact Areas Grid -->
      <div class="impact-areas-grid">
        <a href="/projects#enterprise" class="impact-area-card">
          <div class="impact-area-icon enterprise">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="8" rx="2" ry="2"></rect><rect x="2" y="14" width="20" height="8" rx="2" ry="2"></rect><line x1="6" y1="6" x2="6.01" y2="6"></line><line x1="6" y1="18" x2="6.01" y2="18"></line></svg>
          </div>
          <div class="impact-area-content">
            <h3>Enterprise IT</h3>
            <p>Large-scale Microsoft tenant management, identity, security, and governance at public-sector scale.</p>
          </div>
          <span class="impact-area-arrow">&rarr;</span>
        </a>

        <a href="/projects#web" class="impact-area-card">
          <div class="impact-area-icon web">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>
          </div>
          <div class="impact-area-content">
            <h3>Web Development</h3>
            <p>Websites for businesses, parishes, and communities. Simple, fast, and built to last.</p>
          </div>
          <span class="impact-area-arrow">&rarr;</span>
        </a>

        <a href="/projects#automation" class="impact-area-card">
          <div class="impact-area-icon automation">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
          </div>
          <div class="impact-area-content">
            <h3>Automation</h3>
            <p>PowerShell, scripting, and workflows. Making computers do the boring bits.</p>
          </div>
          <span class="impact-area-arrow">&rarr;</span>
        </a>

        <a href="/projects#consultancy" class="impact-area-card">
          <div class="impact-area-icon consultancy">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>
          </div>
          <div class="impact-area-content">
            <h3>IT Consultancy</h3>
            <p>Strategic advice for organisations who need clarity, not jargon.</p>
          </div>
          <span class="impact-area-arrow">&rarr;</span>
        </a>

        <a href="/projects#hardware" class="impact-area-card">
          <div class="impact-area-icon hardware">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="4" y="4" width="16" height="16" rx="2" ry="2"></rect><rect x="9" y="9" width="6" height="6"></rect><line x1="9" y1="1" x2="9" y2="4"></line><line x1="15" y1="1" x2="15" y2="4"></line><line x1="9" y1="20" x2="9" y2="23"></line><line x1="15" y1="20" x2="15" y2="23"></line><line x1="20" y1="9" x2="23" y2="9"></line><line x1="20" y1="14" x2="23" y2="14"></line><line x1="1" y1="9" x2="4" y2="9"></line><line x1="1" y1="14" x2="4" y2="14"></line></svg>
          </div>
          <div class="impact-area-content">
            <h3>Hardware & Infra</h3>
            <p>Streaming setups, networking, home automation. Real-world problems.</p>
          </div>
          <span class="impact-area-arrow">&rarr;</span>
        </a>

        <a href="/projects#writing" class="impact-area-card">
          <div class="impact-area-icon writing">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 19l7-7 3 3-7 7-3-3z"></path><path d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"></path><path d="M2 2l7.586 7.586"></path><circle cx="11" cy="11" r="2"></circle></svg>
          </div>
          <div class="impact-area-content">
            <h3>Writing & Culture</h3>
            <p>Music writing, fan archives, and local history projects.</p>
          </div>
          <span class="impact-area-arrow">&rarr;</span>
        </a>
      </div>

      <div class="section-footer">
        <a href="/projects" class="btn btn-primary">See All Work &rarr;</a>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  {featuredProjects.length > 0 && (
    <section class="projects-section">
      <div class="container">
        <div class="section-header">
          <span class="section-title">Featured Work</span>
          <h2 class="section-heading">Things I've Built</h2>
        </div>
        <div class="featured-projects">
          {featuredProjects.map((project, i) => (
            <a href={`/projects/${project.slug}`} class="featured-project-card">
              <div class="project-number">0{i + 1}</div>
              <div class="project-content">
                <div class="project-header">
                  <h3>{project.data.title}</h3>
                  <span class={`project-status ${project.data.status}`}>
                    {statusLabels[project.data.status]}
                  </span>
                </div>
                {project.data.tagline && (
                  <p class="project-tagline">{project.data.tagline}</p>
                )}
                <p class="project-description">{project.data.description}</p>
                {project.data.tech && (
                  <div class="project-tech">
                    {project.data.tech.slice(0, 4).map((t) => (
                      <span class="tech-tag">{t}</span>
                    ))}
                  </div>
                )}
                <span class="project-link">
                  Read case study
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
                </span>
              </div>
            </a>
          ))}
        </div>
        <div class="section-footer">
          <a href="/projects" class="btn">View All Projects</a>
        </div>
      </div>
    </section>
  )}

  <!-- Currently Section -->
  <section class="currently-section">
    <div class="container">
      <div class="currently-grid">
        <div class="currently-intro">
          <span class="section-title">Right Now</span>
          <h2 class="section-heading">What I'm Up To</h2>
          <p>
            A quick snapshot of my current focus. Updated whenever I remember to.
          </p>
        </div>
        <div class="currently-items">
          <div class="currently-item">
            <div class="currently-icon working">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 19l7-7 3 3-7 7-3-3z"></path><path d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"></path><path d="M2 2l7.586 7.586"></path><circle cx="11" cy="11" r="2"></circle></svg>
            </div>
            <div class="currently-content">
              <span class="currently-label">Working on</span>
              <span class="currently-value">{currently.working}</span>
            </div>
          </div>
          <div class="currently-item">
            <div class="currently-icon learning">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path></svg>
            </div>
            <div class="currently-content">
              <span class="currently-label">Learning</span>
              <span class="currently-value">{currently.learning}</span>
            </div>
          </div>
          <div class="currently-item">
            <div class="currently-icon listening">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 18V5l12-2v13"></path><circle cx="6" cy="18" r="3"></circle><circle cx="18" cy="16" r="3"></circle></svg>
            </div>
            <div class="currently-content">
              <span class="currently-label">Listening to</span>
              <span class="currently-value">{currently.listening}</span>
            </div>
          </div>
          <div class="currently-item">
            <div class="currently-icon reading">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path></svg>
            </div>
            <div class="currently-content">
              <span class="currently-label">Reading</span>
              <span class="currently-value">{currently.reading}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Blog Preview -->
  {posts.length > 0 && (
    <section class="blog-section">
      <div class="container">
        <div class="section-header">
          <span class="section-title">Writing</span>
          <h2 class="section-heading">Latest Thoughts</h2>
        </div>
        <div class="blog-grid">
          {posts.map((post) => (
            <a href={`/blog/${post.slug}`} class="blog-card card card-link">
              <article>
                <time class="blog-date" datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString("en-IE", {
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                  })}
                </time>
                <h3 class="blog-title">{post.data.title}</h3>
                <p class="blog-excerpt">{post.data.description}</p>
                <span class="blog-link">
                  Read more
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
                </span>
              </article>
            </a>
          ))}
        </div>
        <div class="section-footer">
          <a href="/blog" class="btn">All Posts</a>
        </div>
      </div>
    </section>
  )}

  <!-- Contact CTA -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-card">
        <div class="cta-content">
          <h2>Got a Project in Mind?</h2>
          <p>
            I'm always up for a chat about web development, IT problems, or community projects.
            If you're doing something good and need a hand with the tech side, let's talk.
          </p>
          <div class="cta-actions">
            <a href="mailto:hello@bernardmcweeney.com" class="btn btn-primary btn-lg">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
              Get in Touch
            </a>
            <a href="https://linkedin.com/in/bernardmcweeney" target="_blank" rel="noopener" class="btn btn-lg">
              LinkedIn
            </a>
          </div>
        </div>
        <div class="cta-decoration">
          <div class="cta-cloud cta-cloud-1"></div>
          <div class="cta-cloud cta-cloud-2"></div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero-section {
    padding: 4rem 0 6rem;
    position: relative;
  }

  .hero-content {
    max-width: 700px;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: 9999px;
    font-size: 0.85rem;
    font-weight: 500;
    color: #15803d;
    margin-bottom: 2rem;
  }

  .dark .hero-badge {
    background: rgba(34, 197, 94, 0.15);
    color: #4ade80;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.2); }
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .hero-greeting {
    display: block;
    font-size: 0.5em;
    font-weight: 500;
    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
    background: none;
    -webkit-text-fill-color: var(--color-text-muted);
  }

  .hero-name {
    display: block;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    line-height: 1.8;
    color: var(--color-text-muted);
    margin-bottom: 2.5rem;
  }

  .highlight {
    color: var(--color-sky-dark);
    font-weight: 600;
  }

  .dark .highlight {
    color: var(--color-sky);
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 4rem;
  }

  .btn-lg {
    padding: 1rem 2rem;
    font-size: 1rem;
  }

  .btn svg {
    flex-shrink: 0;
  }

  .hero-scroll-hint {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.75rem;
    color: var(--color-text-muted);
    font-size: 0.85rem;
  }

  .scroll-indicator {
    width: 24px;
    height: 40px;
    border: 2px solid var(--color-cloud-shadow);
    border-radius: 12px;
    position: relative;
  }

  .scroll-indicator::after {
    content: '';
    position: absolute;
    top: 6px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 8px;
    background: var(--color-sky-deep);
    border-radius: 2px;
    animation: scroll-bounce 1.5s ease-in-out infinite;
  }

  @keyframes scroll-bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); opacity: 1; }
    50% { transform: translateX(-50%) translateY(12px); opacity: 0.3; }
  }

  /* Impact Section */
  .impact-section {
    padding: 5rem 0;
    background: linear-gradient(180deg, transparent 0%, var(--color-sky-light) 50%, transparent 100%);
  }

  .dark .impact-section {
    background: linear-gradient(180deg, transparent 0%, rgba(14, 165, 233, 0.05) 50%, transparent 100%);
  }

  .impact-stats-banner {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    padding: 1.5rem;
    background: var(--color-cloud);
    border-radius: 1rem;
    margin: 2rem 0;
    box-shadow: 0 4px 20px rgba(148, 163, 184, 0.1);
  }

  @media (min-width: 640px) {
    .impact-stats-banner {
      grid-template-columns: repeat(4, 1fr);
      padding: 2rem;
    }
  }

  .impact-stat {
    text-align: center;
  }

  .impact-stat-value {
    display: block;
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-sky-dark);
    line-height: 1.2;
  }

  .dark .impact-stat-value {
    color: var(--color-sky);
  }

  .impact-stat-label {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .impact-areas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .impact-area-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: var(--color-cloud);
    border-radius: 1rem;
    text-decoration: none;
    border: 1px solid transparent;
    transition: all 0.3s ease;
  }

  .impact-area-card:hover {
    border-color: var(--color-sky);
    transform: translateX(4px);
    box-shadow: 0 4px 15px rgba(14, 165, 233, 0.1);
  }

  .impact-area-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.75rem;
    flex-shrink: 0;
  }

  .impact-area-icon.enterprise {
    background: rgba(14, 165, 233, 0.15);
    color: var(--color-sky-dark);
  }

  .impact-area-icon.web {
    background: rgba(34, 197, 94, 0.15);
    color: #15803d;
  }

  .impact-area-icon.automation {
    background: rgba(245, 158, 11, 0.15);
    color: #d97706;
  }

  .impact-area-icon.consultancy {
    background: rgba(168, 85, 247, 0.15);
    color: #7c3aed;
  }

  .impact-area-icon.hardware {
    background: rgba(236, 72, 153, 0.15);
    color: #db2777;
  }

  .impact-area-icon.writing {
    background: rgba(99, 102, 241, 0.15);
    color: #4f46e5;
  }

  .dark .impact-area-icon.enterprise { color: var(--color-sky); }
  .dark .impact-area-icon.web { color: #4ade80; }
  .dark .impact-area-icon.automation { color: #fbbf24; }
  .dark .impact-area-icon.consultancy { color: #a78bfa; }
  .dark .impact-area-icon.hardware { color: #f472b6; }
  .dark .impact-area-icon.writing { color: #818cf8; }

  .impact-area-content {
    flex: 1;
    min-width: 0;
  }

  .impact-area-content h3 {
    font-size: 1rem;
    margin: 0 0 0.25rem 0;
    color: var(--color-text);
    transition: color 0.2s ease;
  }

  .impact-area-card:hover h3 {
    color: var(--color-sky-dark);
  }

  .dark .impact-area-card:hover h3 {
    color: var(--color-sky);
  }

  .impact-area-content p {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.4;
  }

  .impact-area-arrow {
    color: var(--color-text-muted);
    font-size: 1.25rem;
    transition: transform 0.2s ease;
    flex-shrink: 0;
  }

  .impact-area-card:hover .impact-area-arrow {
    transform: translateX(4px);
