---
import Layout from "../layouts/Layout.astro";

const projects = [
  {
    name: "Greenberry",
    status: "active",
    description: "Web development and IT services for Irish businesses",
    tech: ["WordPress", "React", "Azure"],
    link: "https://greenberry.ie",
  },
  {
    name: "bernardmcweeney.com",
    status: "active",
    description: "Personal portfolio built with Astro",
    tech: ["Astro", "Tailwind", "Cloudflare"],
    link: "https://bernardmcweeney.com",
  },
  {
    name: "Parish Core",
    status: "development",
    description: "WordPress plugin for Catholic parish management",
    tech: ["WordPress", "PHP", "React"],
    link: null,
  },
];
---

<Layout
  title="Bernard McWeeney"
  description="IT Administrator and Web Developer based in Dublin, Ireland"
>
  <section class="hero">
    <h1>Bernard McWeeney</h1>
    <p>
      IT Administrator and Web Developer based in Dublin.
      I build web applications and manage IT infrastructure for businesses.
    </p>
    <div class="social-links">
      <a href="mailto:hello@bernardmcweeney.com">hello@bernardmcweeney.com</a>
    </div>
  </section>

  <section class="projects">
    <h2>Projects</h2>
    <div class="project-list">
      {projects.map((project) => (
        <a
          href={project.link || "#"}
          class="project"
          target={project.link ? "_blank" : undefined}
          rel={project.link ? "noopener" : undefined}
        >
          <div class="project-header">
            <span class="project-name">{project.name}</span>
            <span class={`project-status ${project.status}`}>
              {project.status === "active" ? "Live" : "In Development"}
            </span>
          </div>
          <p class="project-desc">{project.description}</p>
          <div class="project-tech">
            {project.tech.map((t) => (
              <span class="tech-tag">{t}</span>
            ))}
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>
