---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Now";
const pageDescription = "What I'm doing now - regularly updated.";
const lastUpdated = "October 2025";

// Current activities
const activities = {
	building: [
		"Greenberry - A modern web hosting platform",
		"Cureation - Content curation tools",
		"This personal site with Astro and PageCMS"
	],
	learning: [
		"Edge computing patterns with Cloudflare Workers",
		"Advanced TypeScript patterns",
		"Astro's content collections and view transitions"
	],
	reading: [
		"The Pragmatic Programmer (re-read)",
		"Various web development blogs and newsletters"
	],
	listening: [
		"Deep focus playlists while coding",
		"Tech podcasts during commutes"
	]
};
---

<Layout title={pageTitle} description={pageDescription}>
	<div class="container py-12">
		<!-- Terminal Header -->
		<div class="terminal-window mb-12">
			<div class="terminal-header">
				<div class="terminal-dots">
					<div class="terminal-dot bg-red-400"></div>
					<div class="terminal-dot bg-yellow-400"></div>
					<div class="terminal-dot bg-green-400"></div>
				</div>
			</div>
			<div class="terminal-content">
				<h1 class="text-3xl md:text-4xl font-mono font-bold text-white mb-4">
					&gt; Now<span class="text-emerald-200">/</span>
				</h1>
				<p class="text-emerald-50 text-lg leading-relaxed">
					What I'm currently focused on - updated {lastUpdated}.
				</p>
				<p class="text-emerald-200 text-sm mt-4 font-mono">
					Inspired by <a href="https://nownownow.com/about" class="underline hover:text-white" target="_blank" rel="noopener">nownownow.com</a>
				</p>
			</div>
		</div>

		<div class="max-w-4xl mx-auto space-y-6">
			<!-- Building -->
			<div class="bg-white dark:bg-slate-800 border border-gray-200 dark:border-slate-700 rounded-lg p-8">
				<h2 class="font-mono text-xl font-semibold text-gray-900 dark:text-white mb-6">
					<span class="text-emerald-600 dark:text-emerald-400">&gt;</span> Building
				</h2>
				<div class="space-y-3">
					{activities.building.map(item => (
						<div class="flex items-start space-x-3">
							<div class="w-2 h-2 bg-emerald-500 rounded-full mt-2 flex-shrink-0"></div>
							<p class="text-gray-600 dark:text-gray-300">{item}</p>
						</div>
					))}
				</div>
			</div>

			<!-- Learning -->
			<div class="bg-white dark:bg-slate-800 border border-gray-200 dark:border-slate-700 rounded-lg p-8">
				<h2 class="font-mono text-xl font-semibold text-gray-900 dark:text-white mb-6">
					<span class="text-purple-600 dark:text-purple-400">&gt;</span> Learning
				</h2>
				<div class="space-y-3">
					{activities.learning.map(item => (
						<div class="flex items-start space-x-3">
							<div class="w-2 h-2 bg-purple-500 rounded-full mt-2 flex-shrink-0"></div>
							<p class="text-gray-600 dark:text-gray-300">{item}</p>
						</div>
					))}
				</div>
			</div>

			<!-- Reading -->
			<div class="bg-white dark:bg-slate-800 border border-gray-200 dark:border-slate-700 rounded-lg p-8">
				<h2 class="font-mono text-xl font-semibold text-gray-900 dark:text-white mb-6">
					<span class="text-blue-600 dark:text-blue-400">&gt;</span> Reading
				</h2>
				<div class="space-y-3">
					{activities.reading.map(item => (
						<div class="flex items-start space-x-3">
							<div class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></div>
							<p class="text-gray-600 dark:text-gray-300">{item}</p>
						</div>
					))}
				</div>
			</div>

			<!-- Listening -->
			<div class="bg-white dark:bg-slate-800 border border-gray-200 dark:border-slate-700 rounded-lg p-8">
				<h2 class="font-mono text-xl font-semibold text-gray-900 dark:text-white mb-6">
					<span class="text-pink-600 dark:text-pink-400">&gt;</span> Listening
				</h2>
				<div class="space-y-3">
					{activities.listening.map(item => (
						<div class="flex items-start space-x-3">
							<div class="w-2 h-2 bg-pink-500 rounded-full mt-2 flex-shrink-0"></div>
							<p class="text-gray-600 dark:text-gray-300">{item}</p>
						</div>
					))}
				</div>
			</div>

			<!-- Update Note -->
			<div class="bg-gray-50 dark:bg-slate-800/50 border border-gray-200 dark:border-slate-700 rounded-lg p-6 text-center">
				<p class="text-sm text-gray-600 dark:text-gray-400 font-mono">
					Last updated: {lastUpdated}
				</p>
				<p class="text-xs text-gray-500 dark:text-gray-500 mt-2">
					This page is a snapshot of my current activities and interests.
				</p>
			</div>
		</div>
	</div>
</Layout>