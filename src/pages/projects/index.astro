---
import Layout from "../../layouts/Layout.astro";

// Placeholder projects - replace with getCollection when you have the collection
const projects = [
  {
    slug: 'parish-core',
    title: 'Parish Core',
    description: 'A comprehensive WordPress plugin for Catholic parish management with liturgical calendar integration, mass scheduling, and admin dashboards.',
    status: 'Active',
    tags: ['WordPress', 'PHP', 'React'],
  },
  {
    slug: 'bernardmcweeney-com',
    title: 'bernardmcweeney.com',
    description: 'This very site! Built with Astro, Tailwind CSS v4, and hosted on Cloudflare Workers.',
    status: 'Active',
    tags: ['Astro', 'Tailwind', 'Cloudflare'],
  },
  {
    slug: 'powershell-scripts',
    title: 'PowerShell Automation',
    description: 'Collection of scripts for Microsoft 365 administration, Google Drive management, and Windows deployment.',
    status: 'Ongoing',
    tags: ['PowerShell', 'Microsoft 365', 'GAM'],
  },
];
---

<Layout 
  title="Projects" 
  description="Things I've built and am currently working on."
>
  <div class="container py-8 md:py-12">
    
    <!-- Page Header -->
    <header class="mb-10">
      <h1 class="text-3xl md:text-4xl font-semibold text-[var(--color-text-primary)]">
        Projects
      </h1>
      <p class="text-[var(--color-text-secondary)] mt-2 max-w-2xl">
        A collection of things I've built, am building, or have contributed to.
      </p>
    </header>

    <!-- Projects Grid -->
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      {projects.map(project => (
        <article class="card card-interactive p-5 flex flex-col">
          <div class="flex items-start justify-between gap-3 mb-3">
            <h2 class="font-mono text-lg font-semibold text-[var(--color-text-primary)]">
              {project.title}
            </h2>
            {project.status && (
              <span class="badge badge-brand flex-shrink-0">
                {project.status}
              </span>
            )}
          </div>
          
          <p class="text-sm text-[var(--color-text-muted)] flex-1">
            {project.description}
          </p>
          
          <div class="flex flex-wrap gap-2 mt-4 pt-4 border-t border-[var(--color-border)]">
            {project.tags.map(tag => (
              <span class="badge">{tag}</span>
            ))}
          </div>
        </article>
      ))}
    </div>

    <!-- More coming soon -->
    <div class="card p-6 mt-8 text-center">
      <p class="text-[var(--color-text-muted)]">
        More projects coming soon. Check out my <a href="https://github.com/BernardMcWeeney" class="text-[var(--color-brand)] hover:underline">GitHub</a> for more.
      </p>
    </div>

  </div>
</Layout>