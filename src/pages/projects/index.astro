---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const allProjects = await getCollection("projects");

// Sort by order (lower numbers first)
const sortedProjects = allProjects.sort((a, b) => a.data.order - b.data.order);

const statusLabels = {
  active: "Live",
  development: "In Development",
  planned: "Planned",
  archived: "Archived",
};
---

<Layout
  title="Projects"
  description="A collection of things I've built and am working on."
>
  <div class="container">
    <header class="page-header">
      <h1>Projects</h1>
      <p class="page-intro">
        A mix of professional work, side projects, and community contributions.
      </p>
    </header>

    <div class="projects-list">
      {sortedProjects.map((project) => (
        <a href={`/projects/${project.slug}`} class="project-card">
          <div class="project-header">
            <h2>{project.data.title}</h2>
            <span class={`project-status ${project.data.status}`}>
              {statusLabels[project.data.status]}
            </span>
          </div>
          <p class="project-description">{project.data.description}</p>
          {project.data.tech && project.data.tech.length > 0 && (
            <div class="project-tech">
              {project.data.tech.slice(0, 4).map((tech) => (
                <span class="tech-tag">{tech}</span>
              ))}
              {project.data.tech.length > 4 && (
                <span class="tech-more">+{project.data.tech.length - 4}</span>
              )}
            </div>
          )}
        </a>
      ))}
    </div>

    <section class="projects-cta">
      <p>
        Interested in working together? I'm particularly keen to help
        community groups, charities, and anyone doing something worthwhile.
      </p>
      <a href="mailto:hello@bernardmcweeney.com" class="btn btn-primary">Get in Touch</a>
    </section>
  </div>
</Layout>

<style>
  .page-intro {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    max-width: 600px;
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .project-card {
    display: block;
    padding: 1.5rem;
    background: var(--color-cloud);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }

  .project-card:hover {
    border-color: var(--color-sky);
    transform: translateX(4px);
    box-shadow: 0 4px 12px rgba(14, 165, 233, 0.1);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .project-header h2 {
    font-size: 1.1rem;
    margin: 0;
    color: var(--color-text);
  }

  .project-card:hover h2 {
    color: var(--color-sky-dark);
  }

  .dark .project-card:hover h2 {
    color: var(--color-sky);
  }

  .project-status {
    font-size: 0.7rem;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .project-status.active {
    background: rgba(34, 197, 94, 0.15);
    color: #16a34a;
  }

  .dark .project-status.active {
    background: rgba(34, 197, 94, 0.2);
    color: #4ade80;
  }

  .project-status.development {
    background: rgba(234, 179, 8, 0.15);
    color: #ca8a04;
  }

  .dark .project-status.development {
    background: rgba(234, 179, 8, 0.2);
    color: #facc15;
  }

  .project-status.planned {
    background: rgba(59, 130, 246, 0.15);
    color: #2563eb;
  }

  .dark .project-status.planned {
    background: rgba(59, 130, 246, 0.2);
    color: #60a5fa;
  }

  .project-status.archived {
    background: rgba(107, 114, 128, 0.15);
    color: #4b5563;
  }

  .dark .project-status.archived {
    background: rgba(107, 114, 128, 0.2);
    color: #9ca3af;
  }

  .project-description {
    margin: 0 0 1rem 0;
    font-size: 0.9rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    background: var(--color-sky-light);
    color: var(--color-sky-dark);
    border-radius: 0.25rem;
  }

  .dark .tech-tag {
    background: rgba(14, 165, 233, 0.2);
    color: var(--color-sky);
  }

  .tech-more {
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    color: var(--color-text-muted);
  }

  .projects-cta {
    text-align: center;
    padding: 3rem 2rem;
    background: linear-gradient(135deg, var(--color-sky-light) 0%, rgba(125, 211, 252, 0.3) 100%);
    border-radius: 1.5rem;
    margin-top: 3rem;
  }

  .dark .projects-cta {
    background: linear-gradient(135deg, rgba(14, 165, 233, 0.15) 0%, rgba(14, 165, 233, 0.05) 100%);
  }

  .projects-cta p {
    margin: 0 0 1.5rem 0;
    color: var(--color-text);
    font-size: 1.05rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 1.5rem;
  }
</style>
