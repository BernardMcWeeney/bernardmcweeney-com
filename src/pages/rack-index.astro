---
import RackLayout from "../layouts/RackLayout.astro";
import RackHero from "../components/RackHero.astro";
import SystemMonitors from "../components/SystemMonitors.astro";
import { getCollection } from "astro:content";

// Fetch posts
const posts = (await getCollection("blog"))
  .filter(p => !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);
---

<RackLayout 
  title="Home" 
  description="Bernard McWeeney's personal server rack - IT administrator, web developer, Dublin Ireland"
>
  <!-- Hero / System Info -->
  <RackHero />
  
  <!-- System Monitors -->
  <SystemMonitors />
  
  <!-- Recent Logs (Blog Posts) -->
  <div class="blade" data-unit="3U">
    <div class="blade-face">
      <div class="led-cluster">
        <span class="led on"></span>
        <span class="led on blink"></span>
      </div>
      <span class="blade-label">
        RECENT LOGS
        <span class="model">/var/log/blog</span>
      </span>
      <a href="/blog/" class="btn" style="margin-left:auto;">
        ls -la →
      </a>
    </div>
    
    <div class="blade-content">
      {posts.length === 0 ? (
        <div class="terminal">
          <div class="terminal-body">
            <div class="terminal-line">
              <span class="prompt">[bernard@srv01 ~]$</span>
              <span class="command">ls /var/log/blog/</span>
            </div>
            <div class="terminal-line">
              <span class="output">No log files found. Check back soon.</span>
            </div>
          </div>
        </div>
      ) : (
        <div class="log-list">
          {posts.map((post, i) => {
            const date = new Date(post.data.pubDate);
            const timestamp = date.toISOString().slice(0, 10).replace(/-/g, '');
            return (
              <a href={`/blog/${post.slug}/`} class="log-entry">
                <span class="log-led"></span>
                <span class="log-timestamp">{timestamp}</span>
                <span class="log-title">{post.data.title}</span>
                {post.data.tags?.slice(0, 2).map(tag => (
                  <span class="badge">{tag}</span>
                ))}
              </a>
            );
          })}
        </div>
      )}
    </div>
  </div>
  
  <!-- Quick Links / Services -->
  <div class="blade" data-unit="1U">
    <div class="blade-face">
      <div class="led-cluster">
        <span class="led on"></span>
      </div>
      <span class="blade-label">
        SERVICES
        <span class="model">systemctl</span>
      </span>
    </div>
    
    <div class="blade-content">
      <div class="services-grid">
        <a href="/about/" class="service-card">
          <span class="service-icon">◎</span>
          <span class="service-name">about.service</span>
          <span class="service-status active">● active</span>
          <span class="service-desc">Crew profile and background</span>
        </a>
        
        <a href="/projects/" class="service-card">
          <span class="service-icon">◇</span>
          <span class="service-name">projects.service</span>
          <span class="service-status active">● active</span>
          <span class="service-desc">Active missions and builds</span>
        </a>
        
        <a href="/notes/" class="service-card">
          <span class="service-icon">◆</span>
          <span class="service-name">notes.service</span>
          <span class="service-status active">● active</span>
          <span class="service-desc">Quick notes and TILs</span>
        </a>
        
        <a href="https://github.com/BernardMcWeeney" target="_blank" class="service-card external">
          <span class="service-icon">⬡</span>
          <span class="service-name">github.service</span>
          <span class="service-status active">● active</span>
          <span class="service-desc">Source code repositories</span>
        </a>
      </div>
    </div>
  </div>
  
  <!-- Patch Panel (decorative) -->
  <div class="blade" data-unit="1U" style="margin-top: 1rem;">
    <div class="blade-face">
      <span class="blade-label" style="margin-left: 0;">
        PATCH PANEL
        <span class="model">CAT6A</span>
      </span>
    </div>
    <div class="patch-panel">
      {Array.from({ length: 24 }).map((_, i) => (
        <span 
          class:list={['port', { 
            active: [0, 1, 2, 5, 6, 11].includes(i),
            connected: [0, 1, 2].includes(i)
          }]}
          title={`Port ${i + 1}`}
        >
          {i + 1}
        </span>
      ))}
    </div>
  </div>
</RackLayout>

<style>
  .log-list {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .log-entry {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0.75rem;
    background: var(--color-panel);
    border: 1px solid var(--color-border);
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .log-entry:hover {
    background: var(--color-surface);
    border-color: var(--color-term-green);
  }

  .log-led {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--color-term-green);
    flex-shrink: 0;
  }

  .log-timestamp {
    font-size: 10px;
    color: var(--color-term-dark);
    min-width: 70px;
  }

  .log-title {
    flex: 1;
    font-size: 12px;
    color: var(--color-term-white);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .log-entry:hover .log-title {
    color: var(--color-term-green);
  }

  .services-grid {
    display: grid;
    gap: 0.5rem;
    grid-template-columns: repeat(2, 1fr);
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .service-card {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0.75rem;
    background: var(--color-panel);
    border: 1px solid var(--color-border);
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .service-card:hover {
    border-color: var(--color-primary);
    background: var(--color-primary-dim);
  }

  .service-icon {
    font-size: 16px;
    color: var(--color-term-gray);
  }

  .service-card:hover .service-icon {
    color: var(--color-primary);
  }

  .service-name {
    font-size: 10px;
    font-weight: 600;
    color: var(--color-term-white);
  }

  .service-status {
    font-size: 9px;
    color: var(--color-term-dark);
  }

  .service-status.active {
    color: var(--color-term-green);
  }

  .service-desc {
    font-size: 9px;
    color: var(--color-term-dark);
    margin-top: 0.25rem;
  }

  .service-card.external .service-name::after {
    content: ' ↗';
    color: var(--color-term-dark);
  }
</style>