---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200 mb-10">
	<div class="container">
		<nav class="flex items-center justify-between py-4">
			<!-- Logo/Brand -->
			<div class="flex items-center">
				<a href="/" class="text-xl font-mono font-semibold text-emerald-600 hover:text-emerald-700 transition-colors">
					<span class="text-gray-800">&gt;</span> Bernard_McWeeney<span class="text-emerald-600">/</span>
				</a>
			</div>

			<!-- Desktop Navigation -->
			<div class="hidden md:flex items-center space-x-8">
				<HeaderLink 
					href="/" 
					class="font-mono text-sm text-gray-600 hover:text-emerald-600 transition-colors px-2 py-1 rounded active:bg-emerald-50 active:text-emerald-700"
				>
					home
				</HeaderLink>
				<HeaderLink 
					href="/blog" 
					class="font-mono text-sm text-gray-600 hover:text-emerald-600 transition-colors px-2 py-1 rounded active:bg-emerald-50 active:text-emerald-700"
				>
					blog
				</HeaderLink>
				<HeaderLink 
					href="/projects" 
					class="font-mono text-sm text-gray-600 hover:text-emerald-600 transition-colors px-2 py-1 rounded active:bg-emerald-50 active:text-emerald-700"
				>
					projects
				</HeaderLink>
				<HeaderLink 
					href="/about" 
					class="font-mono text-sm text-gray-600 hover:text-emerald-600 transition-colors px-2 py-1 rounded active:bg-emerald-50 active:text-emerald-700"
				>
					about
				</HeaderLink>
				
				<!-- Theme toggle button -->
				<button 
					id="theme-toggle"
					class="p-2 rounded-lg border border-gray-200 hover:bg-gray-50 transition-colors"
					aria-label="Toggle theme"
				>
					<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
					</svg>
				</button>
			</div>

			<!-- Mobile menu button -->
			<button 
				id="mobile-menu-button"
				class="md:hidden p-2 rounded-lg border border-gray-200 hover:bg-gray-50 transition-colors"
				aria-label="Toggle mobile menu"
			>
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</nav>

		<!-- Mobile Navigation -->
		<div id="mobile-menu" class="md:hidden hidden border-t border-gray-200 py-4">
			<div class="flex flex-col space-y-3">
				<HeaderLink 
					href="/" 
					class="font-mono text-sm text-gray-600 hover:text-emerald-600 transition-colors px-2 py-2 rounded active:bg-emerald-50 active:text-emerald-700"
				>
					home
				</HeaderLink>
				<HeaderLink 
					href="/blog" 
					class="font-mono text-sm text-gray-600 hover:text-emerald-600 transition-colors px-2 py-2 rounded active:bg-emerald-50 active:text-emerald-700"
				>
					blog
				</HeaderLink>
				<HeaderLink 
					href="/projects" 
					class="font-mono text-sm text-gray-600 hover:text-emerald-600 transition-colors px-2 py-2 rounded active:bg-emerald-50 active:text-emerald-700"
				>
					projects
				</HeaderLink>
				<HeaderLink 
					href="/about" 
					class="font-mono text-sm text-gray-600 hover:text-emerald-600 transition-colors px-2 py-2 rounded active:bg-emerald-50 active:text-emerald-700"
				>
					about
				</HeaderLink>
			</div>
		</div>
	</div>
</header>

<script>
	// Mobile menu toggle
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');
	
	mobileMenuButton?.addEventListener('click', () => {
		mobileMenu?.classList.toggle('hidden');
	});
	
	// Theme toggle functionality
	const themeToggle = document.getElementById('theme-toggle');
	const body = document.body;
	
	// Check for saved theme preference or default to light mode
	const currentTheme = localStorage.getItem('theme') || 'light';
	if (currentTheme === 'dark') {
		body.classList.add('dark');
	}
	
	themeToggle?.addEventListener('click', () => {
		body.classList.toggle('dark');
		const theme = body.classList.contains('dark') ? 'dark' : 'light';
		localStorage.setItem('theme', theme);
	});
</script>