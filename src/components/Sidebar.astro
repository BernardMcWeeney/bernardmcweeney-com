---
// Sidebar component for displaying projects and other widgets
interface Project {
	name: string;
	description: string;
	tags: string[];
	link?: string;
	image?: string;
}

// You can move this to a separate data file later
const projects: Project[] = [
	{
		name: "RetroTerm",
		description: "A terminal-inspired UI component library for modern web applications.",
		tags: ["React", "TypeScript", "UI"],
		link: "/projects/retroterm"
	},
	{
		name: "AstroMark", 
		description: "A markdown-based blogging template for Astro with syntax highlighting.",
		tags: ["Astro", "Markdown", "Blog"],
		link: "/projects/astromark"
	}
];
---

<aside class="space-y-8">
	<!-- Projects Section -->
	<div class="bg-white border border-gray-200 rounded-lg p-6">
		<h2 class="font-mono text-lg font-semibold text-gray-900 mb-6 flex items-center">
			<span class="text-emerald-600">#</span> Projects
		</h2>
		
		<div class="space-y-6">
			{projects.map((project) => (
				<div class="border border-gray-200 rounded-lg p-4 hover:border-emerald-300 transition-colors">
					{project.image && (
						<div class="mb-3">
							<img 
								src={project.image} 
								alt={project.name}
								class="w-full h-24 object-cover rounded bg-gray-900"
							/>
						</div>
					)}
					
					<h3 class="font-mono font-semibold text-gray-900 mb-2">
						{project.link ? (
							<a href={project.link} class="hover:text-emerald-600 transition-colors">
								{project.name}
							</a>
						) : (
							project.name
						)}
					</h3>
					
					<p class="text-sm text-gray-600 mb-3 leading-relaxed">
						{project.description}
					</p>
					
					<div class="flex flex-wrap gap-1">
						{project.tags.map((tag) => (
							<span class="tag">
								{tag}
							</span>
						))}
					</div>
				</div>
			))}
		</div>
		
		<div class="text-center mt-6">
			<a 
				href="/projects" 
				class="font-mono text-sm text-emerald-600 hover:text-emerald-700 transition-colors"
			>
				View All Projects â†’
			</a>
		</div>
	</div>

	<!-- Top Tracks Section -->
	<div class="bg-white border border-gray-200 rounded-lg p-6">
		<h2 class="font-mono text-lg font-semibold text-gray-900 mb-6 flex items-center">
			<span class="text-emerald-600">#</span> Top Tracks
		</h2>
		
		<div class="border-t-2 border-gray-900 pt-4">
			<div class="space-y-3">
				<!-- Placeholder track items - replace with real data -->
				<div class="flex items-center space-x-3 p-2 rounded hover:bg-gray-50 transition-colors">
					<div class="w-8 h-8 bg-emerald-600 rounded flex items-center justify-center">
						<svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M9.383 3.076A1 1 0 0110 4v12a1 1 0 01-1.707.707L4.586 13H2a1 1 0 01-1-1V8a1 1 0 011-1h2.586l3.707-3.707a1 1 0 011.09-.217zM15.657 6.343a1 1 0 011.414 0A9.972 9.972 0 0119 12a9.972 9.972 0 01-1.929 5.657 1 1 0 11-1.414-1.414A7.971 7.971 0 0017 12a7.971 7.971 0 00-1.343-4.243 1 1 0 010-1.414z" clip-rule="evenodd"></path>
						</svg>
					</div>
					<div class="flex-1 min-w-0">
						<p class="text-sm font-mono text-gray-900 truncate">Coming soon...</p>
						<p class="text-xs text-gray-500">Music integration</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- About Widget (optional) -->
	<div class="bg-emerald-50 border border-emerald-200 rounded-lg p-6">
		<h3 class="font-mono text-sm font-semibold text-emerald-900 mb-3 uppercase tracking-wider">
			About
		</h3>
		<p class="text-sm text-emerald-800 leading-relaxed">
			Software engineer passionate about clean code, modern web technologies, and digital craftsmanship. 
			Building the future one component at a time.
		</p>
	</div>
</aside>