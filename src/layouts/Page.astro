---
import Layout from "./Layout.astro";

interface Props {
  title: string;
  description: string;
  prompt?: string;
}

const { title, description, prompt } = Astro.props;
---

<Layout title={title} description={description}>
  <div class="container py-8 md:py-12">
    
    <!-- Page Header -->
    <header class="mb-10">
      {prompt && (
        <p class="font-mono text-sm text-[var(--color-text-muted)] mb-2">
          <span class="text-[var(--color-brand)]">$</span> {prompt}
        </p>
      )}
      <h1 class="text-3xl md:text-4xl font-semibold text-[var(--color-text-primary)]">
        {title}
      </h1>
      <p class="text-[var(--color-text-secondary)] mt-2 max-w-2xl">
        {description}
      </p>
    </header>

    <!-- Page Content -->
    <slot />

  </div>
</Layout>