---
import Layout from "./Layout.astro";

interface Props {
  title: string;
  tagline?: string;
  description: string;
  status: "active" | "development" | "planned" | "archived";
  tech?: string[];
  liveUrl?: string;
  repoUrl?: string;
  role?: string;
  year?: string;
  heroImage?: string;
}

const { title, tagline, description, status, tech, liveUrl, repoUrl, role, year, heroImage } = Astro.props;

const statusLabels = {
  active: "Live",
  development: "In Development",
  planned: "Planned",
  archived: "Archived",
};
---

<Layout title={title} description={description} image={heroImage}>
  <article class="project-page">
    <div class="container">
      <header class="project-header">
        <a href="/projects" class="back-link">&larr; All Projects</a>
        
        <div class="project-title-section">
          <div class="project-title-row">
            <h1>{title}</h1>
            <span class={`project-status ${status}`}>{statusLabels[status]}</span>
          </div>
          {tagline && <p class="project-tagline">{tagline}</p>}
        </div>

        <div class="project-meta">
          {role && (
            <div class="meta-item">
              <span class="meta-label">Role</span>
              <span class="meta-value">{role}</span>
            </div>
          )}
          {year && (
            <div class="meta-item">
              <span class="meta-label">Timeline</span>
              <span class="meta-value">{year}</span>
            </div>
          )}
        </div>

        {tech && tech.length > 0 && (
          <div class="project-tech-list">
            {tech.map((t) => (
              <span class="tech-tag">{t}</span>
            ))}
          </div>
        )}

        <div class="project-links">
          {liveUrl && (
            <a href={liveUrl} class="btn btn-primary" target="_blank" rel="noopener">
              Visit Site &rarr;
            </a>
          )}
          {repoUrl && (
            <a href={repoUrl} class="btn" target="_blank" rel="noopener">
              View Code
            </a>
          )}
        </div>
      </header>

      {heroImage && (
        <div class="project-hero">
          <img src={heroImage} alt={`${title} screenshot`} />
        </div>
      )}

      <div class="project-content prose">
        <slot />
      </div>

      <footer class="project-footer">
        <a href="/projects" class="btn">View All Projects</a>
      </footer>
    </div>
  </article>
</Layout>

<style>
  .project-page {
    padding-bottom: 4rem;
  }

  .project-header {
    padding: 3rem 0;
  }

  .back-link {
    display: inline-block;
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .project-title-section {
    margin-bottom: 2rem;
  }

  .project-title-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 0.5rem;
  }

  .project-title-row h1 {
    margin: 0;
  }

  .project-tagline {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  .project-meta {
    display: flex;
    gap: 2rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .meta-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
  }

  .meta-value {
    font-weight: 600;
    color: var(--color-text);
  }

  .project-tech-list {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .project-hero {
    margin-bottom: 3rem;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(148, 163, 184, 0.2);
  }

  .project-hero img {
    width: 100%;
    height: auto;
    display: block;
  }

  .project-content {
    max-width: 70ch;
  }

  .project-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-cloud-shadow);
  }

  @media (max-width: 768px) {
    .project-header {
      padding: 2rem 0;
    }

    .project-title-row h1 {
      font-size: 2rem;
    }

    .project-tagline {
      font-size: 1.1rem;
    }

    .project-meta {
      gap: 1.5rem;
    }
  }
</style>
