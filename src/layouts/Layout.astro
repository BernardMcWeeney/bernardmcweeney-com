---
import BaseHead from "../components/BaseHead.astro";

interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body class="flex flex-col min-h-screen">
    <!-- Sky Background with Sun/Moon -->
    <div class="sky-bg" aria-hidden="true">
      <div class="celestial-body"></div>
      <div class="sky-gradient"></div>
    </div>

    <!-- Floating Clouds -->
    <div class="clouds" id="clouds" aria-hidden="true">
      <div class="cloud cloud-1" data-speed="0.02"></div>
      <div class="cloud cloud-2" data-speed="0.015"></div>
      <div class="cloud cloud-3" data-speed="0.025"></div>
      <div class="cloud cloud-4" data-speed="0.018"></div>
      <div class="cloud cloud-5" data-speed="0.012"></div>
      <div class="cloud cloud-6" data-speed="0.022"></div>
      <div class="cloud cloud-7" data-speed="0.008"></div>
    </div>

    <!-- Floating Particles -->
    <div class="particles" id="particles" aria-hidden="true">
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
    </div>

    <header class="header">
      <div class="container">
        <nav>
          <a href="/" class="logo">Bernard McWeeney</a>
          <div class="nav-links">
            <a href="/" class:list={["nav-link", { active: currentPath === "/" }]}>Home</a>
            <a href="/blog" class:list={["nav-link", { active: currentPath.startsWith("/blog") }]}>Blog</a>
            <a href="/projects" class:list={["nav-link", { active: currentPath.startsWith("/projects") }]}>Projects</a>
            <a href="/about" class:list={["nav-link", { active: currentPath === "/about" || currentPath === "/about/" }]}>About</a>
            <button class="theme-toggle" id="theme-toggle" aria-label="Toggle theme">
              <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="5"></circle>
                <line x1="12" y1="1" x2="12" y2="3"></line>
                <line x1="12" y1="21" x2="12" y2="23"></line>
                <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                <line x1="1" y1="12" x2="3" y2="12"></line>
                <line x1="21" y1="12" x2="23" y2="12"></line>
                <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
              </svg>
              <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: none;">
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
              </svg>
            </button>
          </div>
        </nav>
      </div>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer-links">
          <a href="https://github.com/BernardMcWeeney" target="_blank" rel="noopener">GitHub</a>
          <a href="https://linkedin.com/in/bernardmcweeney" target="_blank" rel="noopener">LinkedIn</a>
          <a href="https://twitter.com/BMcWeeneyIE" target="_blank" rel="noopener">Twitter</a>
          <a href="/rss.xml">RSS</a>
        </div>
        <p>&copy; {new Date().getFullYear()} Bernard McWeeney. Meath, Ireland.</p>
      </div>
    </footer>

    <script is:inline>
      // Theme toggle
      const toggle = document.getElementById('theme-toggle');
      const sunIcon = toggle?.querySelector('.sun-icon');
      const moonIcon = toggle?.querySelector('.moon-icon');

      function updateIcons() {
        const isDark = document.documentElement.classList.contains('dark');
        if (sunIcon && moonIcon) {
          sunIcon.style.display = isDark ? 'none' : 'block';
          moonIcon.style.display = isDark ? 'block' : 'none';
        }
      }

      updateIcons();

      toggle?.addEventListener('click', () => {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
        updateIcons();
      });

      // Cloud parallax on scroll
      const clouds = document.querySelectorAll('.cloud');
      const particles = document.querySelectorAll('.particle');
      let ticking = false;

      function updateParallax() {
        const scrollY = window.scrollY;

        clouds.forEach((cloud) => {
          const speed = parseFloat(cloud.dataset.speed) || 0.02;
          const yOffset = scrollY * speed * 50;
          const currentTransform = getComputedStyle(cloud).transform;
          cloud.style.setProperty('--scroll-offset', `${yOffset}px`);
        });

        particles.forEach((particle, i) => {
          const speed = 0.03 + (i * 0.01);
          const yOffset = scrollY * speed * 30;
          particle.style.setProperty('--scroll-offset', `${yOffset}px`);
        });

        ticking = false;
      }

      window.addEventListener('scroll', () => {
        if (!ticking) {
          requestAnimationFrame(updateParallax);
          ticking = true;
        }
      });

      // Subtle mouse movement effect on clouds
      let mouseX = 0;
      let mouseY = 0;
      let currentX = 0;
      let currentY = 0;

      document.addEventListener('mousemove', (e) => {
        mouseX = (e.clientX / window.innerWidth - 0.5) * 2;
        mouseY = (e.clientY / window.innerHeight - 0.5) * 2;
      });

      function animateClouds() {
        // Smooth lerp towards mouse position
        currentX += (mouseX - currentX) * 0.02;
        currentY += (mouseY - currentY) * 0.02;

        clouds.forEach((cloud, i) => {
          const depth = 1 + (i * 0.3);
          const moveX = currentX * 15 * depth;
          const moveY = currentY * 8 * depth;
          cloud.style.setProperty('--mouse-x', `${moveX}px`);
          cloud.style.setProperty('--mouse-y', `${moveY}px`);
        });

        requestAnimationFrame(animateClouds);
      }

      // Only enable mouse parallax on non-touch devices
      if (window.matchMedia('(hover: hover)').matches) {
        animateClouds();
      }
    </script>
  </body>
</html>
